
<SignalDrawer>:

<MainAppLayout>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    Label:
        text: "Welcome to the Signal Playground!"
        font_name: 'Georgia'
        color: 1, 1, 0, 1 
        size_hint_y: None
        height: dp(50) 
        font_size: dp(22) 
        halign: 'center' 
        valign: 'middle'
        text_size: self.size 

    BoxLayout:
        size_hint_y: None
        height: dp(48)
        TextInput:
            id: binary_input
            hint_text: "Enter binary (e.g., 11001)"
            multiline: False
            font_size: dp(20)
            padding_y: [self.height / 2.0 - self.font_size / 2.0, self.height / 2.0 - self.font_size / 2.0]

    GridLayout:
        cols: 3
        size_hint_y: None
        height: dp(120)
        spacing: dp(5)

        Button:
            text: "NRZ-L"
            on_press: root.encode_and_draw('nrz_l')
        Button:
            text: "NRZ-I"
            on_press: root.encode_and_draw('nrz_i')
        Button:
            text: "RZ"

            on_press: root.encode_and_draw('rz')
        Button:
            text: "Manchester"
            on_press: root.encode_and_draw('manchester')
        Button:
            text: "Diff. Manchester"
            on_press: root.encode_and_draw('differential_manchester')
        Button:
            text: "Clear"
            background_color: 0.8, 0.2, 0.2, 1
            on_press: root.clear_signal()

    SignalDrawer:
        id: signal_display
        size_hint_y: 1.0
        canvas.before:
            Color:
                rgba: 0.1, 0.9, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size